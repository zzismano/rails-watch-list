<div class="container m-3">
  <%= link_to "Back to lists", lists_path, class: "btn btn-primary"%>
  <div class="d-flex justify-content-between mt-5">
  <div class="card-category w-100 p-5 d-flex justify-content-between", style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.banner.key %>')">
    <h2><%=@list.name%></h2>
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>



  </div>

  <div class="mt-2">

    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card col-12 col-md-4">
          <img class="card-img-top" src=<%=bookmark.movie.poster_url %>   alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%=bookmark.movie.title%></h5>
            <p class="card-text"><%= bookmark.comment %></p>
            <p class="card-text border p-2"><%= bookmark.movie.overview %></p>
            <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete}, class:"btn btn-danger"  %>
          </div>
        </div>
        </li>
      <% end %>
    </div>

  </div>

</div>
