<div class="container m-3">
  <div class="container m-3'" >
    <h1>WatchLists</h1>
    <%= link_to "Add List", new_list_path, class: "btn btn-primary btn-lg btn-block"%>
  </div>
    <div class="row mt-5">
      <% @lists.each do |list| %>
        <div class="col-12 col-md-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.banner.key,  height: 300, crop: :fill %>')">
            <%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %>
          </div>
        </div>
      <% end %>
    </ul>
</div>
